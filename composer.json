{
  "name": "your-vendor/interreg",
  "description": "Interreg WordPress Theme Project",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "johnpbloch/wordpress-core": "^6.4",
    "johnpbloch/wordpress-core-installer": "^2.0",
    "composer/installers": "^2.0"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "johnpbloch/wordpress-core-installer": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"shell_exec('cp -r wordpress/* . && rm -rf wordpress && rm -rf wp-content');\"",
      "php -r \"if (file_exists('wp-config-sample.php')) rename('wp-config-sample.php', 'wp-config.php');\""
    ],
    "post-update-cmd": [
      "php -r \"shell_exec('cp -r wordpress/* . && rm -rf wordpress && rm -rf wp-content');\"",
      "php -r \"if (file_exists('wp-config-sample.php')) rename('wp-config-sample.php', 'wp-config.php');\""
    ]
  },
  "extra": {
    "installer-paths": {
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ]
}